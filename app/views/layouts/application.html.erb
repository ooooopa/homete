<!DOCTYPE html>
<html>
  <head>
    <title>homete</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">homete</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/achievement">
            <span class="glyphicon glyphicon-grain" aria-hidden="true"></span>
             homete
          </a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/achievement/list">一覧</a></li>
            <% if logged_in? %>
            <li><button type="button" class="btn btn-warning navbar-btn "><a href="/achievement/new" class="header-a">つぶやく</a></button></li>
              <li class="navbar-right"><%= link_to "Profile", user_path(current_user.id) %></li>
              <li class="navbar-right"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
            <% else %>
              <li class="navbar-right"><%= link_to "Login", new_session_path %></li>
              <li class="navbar-right"><%= link_to "Sign up", new_user_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}, alert alert-danger text-center") %>
    <% end %>

    <%= yield %>

  <footer class="footer">
    <div class="container">
      <p class="footer-text">DIC-201803 HiranoMayumi</p>
    </div>
  </footer>    
  </body>
</html>
