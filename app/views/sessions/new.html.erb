<div class="container">
<div class="col-md-offset-3 col-md-9 col-sm-offset-3 col-sm-9 col-xs-offset-1 col-xs-11">
  <h1>Log in</h1>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <table>
    <tr>
      <th><%= f.label :email, {class:'top-font-color'}  %></th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <th><%= f.label :password, {class:'top-font-color'} %></th>
      <td><%= f.password_field :password %></td>
    </tr>
    </table>
    <%= f.submit "Log in", {class:"btn btn-warning navbar-btn col-md-offset-3 col-md-2"} %>
  <% end %>
</div>
</div>