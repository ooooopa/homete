<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @user, local: true) do |f| %>
  <table>
  <tr>
    <th><%= f.label :name, {class:'top-font-color'} %></th>
    <td class="td-field"><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th><%= f.label :email, {class:'top-font-color'} %></th>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
    <th><%= f.label :password, {class:'top-font-color'} %></th>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <th><%= f.label :password_confirmation, {class:'top-font-color'} %></th>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  </table>

  <div class="field">
    <p>
      <strong class="top-font-color">アイコン</strong>
    </p>
    <%= image_tag(@user.image.url) if @user.image.url %>
    <%= f.file_field :image, id: :feed_image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <br>
  <%= f.submit "登録する", {class:"btn btn-warning navbar-btn col-md-offset-3 col-md-5"}%>

<% end %>